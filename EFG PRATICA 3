    <script>
        var idade = parseInt('Digite sua idade')
        idade >= 18 ? "Maior de idade" : "Menor de idade"
    </script>

    <script>
        var valorTotal = parseFloat("Digite o valor total da compra:");
        var Assinatura = prompt("Digite o tipo de assinatura (silver, gold ou platinum): ").toLowerCase();

        let desconto = 0;

        switch(Assinatura){
            case "silver":
                desconto = 0.05;
                break;

            case "gold":
                desconto = 0.10;
                break;

            case "platinum":
                desconto = 0.15;
                break;

            default:
                alert('SEM ASSINATURA');
                break;
        }
        var valor = valorTotal - (valorTotal * desconto);
        if(valor > 300.00){
            alert("Ganhou um brinde");
        }
        else{
            alert("valor total é R$", valor);
        }


    </script>
    
