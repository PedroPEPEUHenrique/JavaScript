    <SCript>
        var item = parseInt("Digite um item de 0 a 10: ")
        switch (item){
            case 1:
                alert('Bebidas');
                break;
            
            case 2:
                alert('Laticínios');
                break;

            case 3:
                alert('Bebidas');
                break;
            
            case 4:
                alert('Bebidas');
                break;

            case 5:
