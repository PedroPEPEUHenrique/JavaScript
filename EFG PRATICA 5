     <h1>Calculadora de Soma</h1>
  
  <span>Primeiro Numero:</span>
  <input type="number" id="num1" placeholder="Ex: 5"><br><br>
  <span>Segundo Numero:</span>
  <input type="number" id="num2" placeholder="Ex: 10"><br><br>
  <button onclick="somar()">Calcular soma</button><br><br>
  <button onclick="subtrair()"> Subtração </button><br><br>
  <button onclick="multi()">Multiplicar</button><br><br>
  <button onclick="dividir()">Divisão</button><br><br>
  <button onclick="resto()">Resto da divisão</button><br><br>
  <h2 id="resultado"></h2>
  <script>
    function somar() {
      var valor1 = document.getElementById('num1').value;
      var valor2 = document.getElementById('num2').value;

      var numero1 = parseFloat(valor1);
      var numero2 = parseFloat(valor2);

      var soma = numero1 + numero2;

      var elementoResultado = document.getElementById('resultado');
      elementoResultado.textContent = "A soma é: " + soma;

    }
    function subtrair() {
      var valor1 = document.getElementById('num1').value;
      var valor2 = document.getElementById('num2').value;

      var numero1 = parseFloat(valor1);
      var numero2 = parseFloat(valor2);

      var sub = numero1 - numero2;

      var elementoResultado = document.getElementById('resultado');
      elementoResultado.textContent = "A subtração é: " + sub;
    }
    function multi() {
      var valor1 = document.getElementById('num1').value;
      var valor2 = document.getElementById('num2').value;

      var numero1 = parseFloat(valor1);
      var numero2 = parseFloat(valor2);

      var mult = numero1 * numero2;

      var elementoResultado = document.getElementById('resultado');
      elementoResultado.textContent = "A multiplicação é: " + mult;
    }
    function dividir() {
      var valor1 = document.getElementById('num1').value;
      var valor2 = document.getElementById('num2').value;

      var numero1 = parseFloat(valor1);
      var numero2 = parseFloat(valor2);

      var divisao = numero1 / numero2;

      var elementoResultado = document.getElementById('resultado');
      elementoResultado.textContent = "A divisão é: " + divisao.toFixed(2);
    }
    function resto() {
      var valor1 = document.getElementById('num1').value;
      var valor2 = document.getElementById('num2').value;

      var numero1 = parseFloat(valor1);
      var numero2 = parseFloat(valor2);

      var resto = numero1 & numero2;

      var elementoResultado = document.getElementById('resultado');
      elementoResultado.textContent = "O resto da divisão é: " + resto.toFixed(0);
    }
    </script>

    <span>Primeiro numero da media:</span>
    <input type="number" id="med1" placeholder="Ex: 5"></input><br><br>

    <span>Segundo numero da media:</span>
    <input type="number" id="med2" placeholder="Ex: 10"></input><br><br>

    <span>Terceiro numero da media:</span>
    <input type="number" id="med3" placeholder="Ex: 5"></input><br><br>

    <button onclick="media()">resultado da media</button>
    <h2 id="resultado"></h2>

    <script>
        function media() {
            var media1 = document.getElementById('med1').value;
            var media2 = document.getElementById('med2').value;
            var media3 = document.getElementById('med3').value;

            var nm1 = parseFloat(media1);
            var nm2 = parseFloat(media2);
            var nm3 = parseFloat(media3);

            var medi = nm1 + nm2 + nm3 / 3;
            var elementoResultado = document.getElementById('resultado');
                elementoResultado.textContent = "O resto da divisão é: " + medi;





        }

           </script>

